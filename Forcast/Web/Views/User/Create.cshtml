@model Web.Models.User.UserModel

@{
	ViewBag.Title = "Регистрация пользователя";
}
<div class="container">
	<div class="col-md-6">
		<h3>Регистрация нового пользователя</h3>
	</div>
</div>
@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
	<div class="container">
		<div class="col-md-4">
			<div class="form-group">
				@Html.LabelFor(x => x.Info.Login)
				@Html.EditorFor(x => x.Info.Login, new {htmlAttributes = new {@class = "form-control", placeholder = "Логин"}})
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Info.Email)
				@Html.EditorFor(x => x.Info.Email, new {htmlAttributes = new {@class = "form-control", placeholder = "e-mail"}})
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Password)
				@Html.EditorFor(x => x.Password, new {htmlAttributes = new {@class = "form-control", placeholder = "Пароль"}})
			</div>
			<input type="submit" class="btn btn-default" value="Зарегистрировать"/>
		</div>
	</div>
}
