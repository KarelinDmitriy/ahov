@model Web.Models.Org.OrgModel

<div class="container">
	<div class="col-md-4">
		<div class="form-group">
			@Html.LabelFor(x => x.Org.Name)
			@Html.EditorFor(x => x.Org.Name, new {htmlAttributes = new {@class = "form-control", placeholder = "Название"}})
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Org.PersonalCount)
			@Html.EditorFor(x => x.Org.PersonalCount, new {htmlAttributes = new {@class = "form-control", placeholder = "Название"}})
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Org.Ro)
			@Html.EditorFor(x => x.Org.Ro, new {htmlAttributes = new {@class = "form-control", placeholder = "Название"}})
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Org.Rz)
			@Html.EditorFor(x => x.Org.Rz, new {htmlAttributes = new {@class = "form-control", placeholder = "Название"}})
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Org.Kf)
			@Html.EditorFor(x => x.Org.Kf, new {htmlAttributes = new {@class = "form-control", placeholder = "Название"}})
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Org.CityId)
			@Html.DropDownListFor(x => x.Org.CityId, Model
				.AvaliableCities.Select(x => new SelectListItem
				{
					Selected = Model.Org.CityId == x.Id,
					Text = x.Name,
					Value = x.Id.ToString()
				}))
		</div>
	</div>
</div>